@model List<Category>

<table class="table table-info">
    <tr>
        <th colspan="4">Category List</th>
        <th>
            <a class="btn btn-primary" asp-controller="Category" asp-action="Add">Add</a>
        </th>
    </tr>
    <tr>
        <th>Id</th>
        <th>Name</th>

        <th>Menu</th>
    </tr>
    @foreach (var cate in Model)
    {
        <tr>
            <td>@cate.Id</td>
            <td>@cate.Name</td>


            <td>
                <a asp-controller="Category" asp-action="Edit" class="btn btn-warning"
               asp-route-id="@cate.Id">Edit</a>
                @if (User.Identity.IsAuthenticated && User.IsInRole("Administrator"))
                {
                    <a class="btn btn-danger" asp-controller="Category" asp-action="Delete" asp-route-id="@cate.Id"
               onclick="return confirm('Are you sure to delete this ?');">
                        Delete
                    </a>
                }
            </td>


        </tr>
    }
</table>