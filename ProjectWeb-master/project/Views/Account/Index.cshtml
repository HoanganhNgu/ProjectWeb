
    <div class="container">
        <h4>User List: @Model.Count Accounts</h4>
        <table class="table table-bordered text-center">
            <tr>
              @*  <th>Id</th>*@
                <th>Email</th>
                <th>Menu</th>
            </tr>

            @foreach (var account in Model)
        {
            <tr>
            @*    <td>@account.Id</td>*@
                <td>@account.Email</td>

              
                <td>


                    @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                    {

                        <a class="btn btn-success" asp-controller="Account" asp-action="Edit" asp-route-id="@account.Id">
                            Reset
                        </a>
                        <a class="btn btn-danger" asp-controller="Account" asp-action="Delete" asp-route-id="@account.Id">
                            Delete
                        </a>

                    }
                </td>

            </tr>

        }
        </table>
    </div>

