@model List<Order>
@if (User.Identity.IsAuthenticated)
{
    <table class="table table-info">
        
        <tr>
            <th>Id</th>
            <th>Customer</th>
            <th>OrderDate</th>
            <th>OrderStock</th>

            <th>BookId</th>
            <th>Total</th>


            <th>Menu</th>

        </tr>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.Id</td>
                <th>@order.Customer </th>
                
                <td>
                    @order.OrderDate
                </td>
                <td>@order.OrderStock</td>

                <td>@order.BookId</td>
                <td>$@order.Total</td>
 
                <td>


                    @if (User.Identity.IsAuthenticated && User.IsInRole("StoreOwner"))
                    {

                        <a asp-controller="Order" asp-action="IsAccepted" class="btn btn-success" asp-route-id="@order.Id">
                            Accept
                        </a>
                        <a asp-controller="Order" asp-action="Delete" class="btn btn-danger" asp-route-id="@order.Id">
                            Decline
                        </a>
                        
                    }
                </td>

            </tr>

        }
    </table>
}